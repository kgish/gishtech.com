<div class="row marketing">

    <div class="col-lg-12">
        <h4>Contact information</h4>
        <div class="row">
            <div class="col-lg-6">
                <blockquote>
                    <p>{{fa-icon 'envelope-o'}} &nbsp; <a href="mailto:kiffin.gish@planet.nl">kiffin.gish@planet.nl</a></p>
                    <p>{{fa-icon 'phone'}} &nbsp; <a href="tel:+31657552871">+31 65 75 52 871</a></p>
                    <p>{{fa-icon 'pdf'}} &nbsp; <a href="/assets/documents/gishtech-terms-and-conditions.pdf">Terms and conditions</a></p>
                </blockquote>
            </div>
            <div class="col-lg-6">
                <blockquote>
                    <p>{{fa-icon 'university'}} &nbsp; KvK 82744238</p>
                     <p>{{fa-icon 'euro'}} &nbsp; BTW NL003724468B54</p>
                </blockquote>
            </div>
        </div>
        <h4>Send me a message</h4>
        <div class="row">
            <div class="col-lg-12">
                <form>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group{{if validName ' has-success' ''}}">
                                <label for="name">Name</label>
                                {{input type="text" class="form-control form-control-success" id="name" value=name}}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group{{if validEmail ' has-success' ''}}">
                                <label for="email">Email</label>
                                {{input type="email" class="form-control form-control-success" id="email" value=email}}
                            </div>
                        </div>
                    </div>
                    <div class="form-group{{if validMessage ' has-success' ''}}">
                        <label for="message">Message</label>
                        {{textarea class="form-control form-control-success" id="message" rows="5" value=message}}
                    </div>
                    <button type="submit" class="btn btn-primary{{if enableSubmit '' ' disabled'}}" {{action 'submit'}}>Send</button>
                </form>
            </div>
        </div>
    </div>

</div>

